{
  "name": "notes-node",
  "version": "0.0.1",
  "description": "Notes app",
  "main": "lib/app.js",
  "bin": {
    "notes": "lib/app.js"
  },
  "scripts": {
    "start": "babel-node src/app.js",
    "start:debug": "babel-node --inspect-brk=127.0.0.1:9229 src/app.js",
    "start:watch": "nodemon --exec babel-node src/app.js",
    "build": "babel src --out-dir lib --ignore *test.js",
    "pretest": "eslint --ignore-path .gitignore .",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "find src -iname '*.test.js' | xargs babel-node test/tap.js | faucet",
    "test:unit:cover": "find src -iname '*.test.js' | NODE_ENV=test xargs nyc babel-node test/tap.js",
    "test:integration": "babel-node test/integration.js | faucet",
    "test:integration:cover": "NODE_ENV=test nyc babel-node test/integration.js",
    "precommit": "npm run test",
    "prepush": "npm run test",
    "prepack": "npm run build"
  },
  "author": "Max Tkachenko",
  "license": "ISC",
  "dependencies": {
    "lodash": "^4.17.4",
    "yargs": "^4.7.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-istanbul": "^4.1.5",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "eslint": "^4.14.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "faucet": "0.0.1",
    "husky": "^0.14.3",
    "nodemon": "^1.13.3",
    "nyc": "^11.3.0",
    "tape-async": "^2.3.0",
    "testdouble": "^3.2.6"
  }
}
